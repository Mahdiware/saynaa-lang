import path

## Absolute
assert(path.isabspath("/") or path.isabspath("C:\\"))

## Join
p = path.join("foo", "bar")

print("join:", p)
# Expect foo/bar (or foo\bar)

p2 = path.join("foo", "bar", "baz")
print("join2:", p2)
# Expect foo/bar/baz

## Normalize
n = path.normpath("foo/./bar/../baz")
print("norm:", n)
# Expect foo/baz

## Basename
b = path.basename("/foo/bar.txt")
print("base:", b)
# Expect bar.txt

## Dirname
d = path.dirname("/foo/bar.txt")
print("dir:", d)
# Expect /foo

## Ext
e = path.getext("file.sa")
print("ext:", e)
# Expect .sa
